<resources>
    <!-- Base application theme. -->
    <style name="Theme.SavPDFViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red_night</item>
        <item name="colorPrimaryVariant">@color/dark_dark_red_night</item>
        <item name="colorOnPrimary">@color/white_smoke</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red</item>
        <item name="colorSecondaryVariant">@color/dark_dark_red</item>
        <item name="colorOnSecondary">@color/dark_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        <item name="itemIconTint">@color/dark_white</item>
        <item name="itemTextColor">@color/dark_white</item>
        <item name="android:state_selected">@color/white</item>
    </style>
</resources>